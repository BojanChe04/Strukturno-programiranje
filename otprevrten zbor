//daen zbor da mi go ispecatit obratno
#include <iostream>
#include <cmath>
#include <climits>
#include<bits/stdc++.h>
using namespace std;
int main() {
    char zbor[100];
    cout<<"vnesi go zborot"<<endl;
    cin.getline(zbor,100);
    cout<<"vnesovte"<<endl;
    cout<<zbor<<endl;
    int len=strlen(zbor);
    char nopaku[100];
    int brojac=0;
    for (int i = len-1; i >= 0; --i) {
        nopaku[brojac++]=zbor[i];
    }
    cout<<"otprevrten "<<endl;
    for (int i = 0; i < brojac; ++i) {
        cout<<nopaku[i];
    }
    return 0;
}
